# BYOK Firebase Configuration
# Copy this file to .env and update with your Firebase project details

# Firebase Configuration (Required)
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-app-id-here

# Optional: Advanced Configuration
# Uncomment and set these if using admin features
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-setup/service-account.json
# FIREBASE_PROJECT_ID=your-project-id

# BYOK System Configuration
# These are automatically configured by the setup wizard
VITE_FIREBASE_WHITELIST_ENABLED=true
VITE_FIREBASE_ADMIN_EMAIL=admin@yourdomain.com

# Development Settings
VITE_DEBUG_MODE=false
VITE_FIREBASE_EMULATOR=false

